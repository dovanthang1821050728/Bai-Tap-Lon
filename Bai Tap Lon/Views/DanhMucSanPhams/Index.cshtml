@model IEnumerable<Bai_Tap_Lon.Models.DanhMucSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Mục Sản Phẩm </h2>

<p>
    @Html.ActionLink("Danh Mục Sản Phẩm ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tongsoluongbandau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongDaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongConLai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw( item.TenSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tongsoluongbandau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongDaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongConLai)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaSanPham }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaSanPham }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaSanPham })
        </td>
    </tr>
}

</table>
