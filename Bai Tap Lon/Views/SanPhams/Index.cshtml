}

<h2>Sản Phẩm </h2>

<p>
    @Html.ActionLink("Thêm Mới ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongMua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayMua)
